<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Logo/Header -->
    <div class="text-center">
      <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-blue-600 mb-4">
        <svg class="h-10 w-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
      </div>
      <h2 class="text-3xl font-bold text-white mb-2">Gestor de Incidencias</h2>
      <p class="text-gray-400">Inicia sesiÃ³n en tu cuenta</p>
    </div>

    <!-- Login Card -->
    <div class="bg-gray-800 rounded-xl shadow-2xl p-8 border border-gray-700">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "appearance-none relative block w-full px-4 py-3 bg-gray-900 border border-gray-600 placeholder-gray-500 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm",
              placeholder: "Enter your email" %>
        </div>

        <!-- Password Field -->
        <div>
          <div class="flex items-center justify-between mb-2">
            <%= f.label :password, class: "block text-sm font-medium text-gray-300" %>
            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot?", new_password_path(resource_name), class: "text-sm text-blue-400 hover:text-blue-300" %>
            <% end %>
          </div>
          <%= f.password_field :password,
              autocomplete: "current-password",
              class: "appearance-none relative block w-full px-4 py-3 bg-gray-900 border border-gray-600 placeholder-gray-500 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm",
              placeholder: "Enter your password" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-600 rounded bg-gray-900" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-300" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Sign in", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out cursor-pointer" %>
        </div>
      <% end %>

      <!-- Additional Links -->
      <div class="mt-6 text-center">
        <% if devise_mapping.registerable? %>
          <p class="text-sm text-gray-400">
            Don't have an account?
            <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-blue-400 hover:text-blue-300 ml-1" %>
          </p>
        <% end %>
      </div>
    </div>

    <!-- Footer Info -->
    <div class="text-center text-xs text-gray-500">
      <p>ðŸ”’ Secure enterprise-grade authentication</p>
    </div>
  </div>
</div>
