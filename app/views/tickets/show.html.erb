<div class="p-8">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-[#c9d1d9]">Ticket #<%= @ticket.id %></h1>
      <p class="text-[#8b949e] mt-2"><%= @ticket.title %></p>
    </div>
    <div class="space-x-3">
      <%= link_to "Edit", edit_ticket_path(@ticket), class: "px-4 py-2 bg-[#58a6ff] text-white rounded-lg hover:bg-[#58a6ff]/80 transition-colors" %>
      <%= link_to "Back", tickets_path, class: "px-4 py-2 bg-[#161b22] border border-[#30363d] text-[#c9d1d9] rounded-lg hover:bg-[#21262d] transition-colors" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <%# Ticket Details %>
      <div class="bg-[#161b22] border border-[#30363d] rounded-lg p-6">
        <h2 class="text-lg font-semibold text-[#c9d1d9] mb-4">Details</h2>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-[#8b949e] mb-1">Description</label>
            <p class="text-[#c9d1d9]"><%= @ticket.description %></p>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-[#8b949e] mb-1">Status</label>
              <span class="inline-block px-3 py-1 text-sm rounded <%= case @ticket.status
                when 'open' then 'bg-[#58a6ff]/20 text-[#58a6ff]'
                when 'in_progress' then 'bg-[#ffa657]/20 text-[#ffa657]'
                when 'resolved' then 'bg-[#7ee787]/20 text-[#7ee787]'
                when 'closed' then 'bg-[#8b949e]/20 text-[#8b949e]'
              end %>">
                <%= @ticket.status.titleize %>
              </span>
            </div>
            <div>
              <label class="block text-sm font-medium text-[#8b949e] mb-1">Priority</label>
              <span class="inline-block px-3 py-1 text-sm rounded <%= case @ticket.priority
                when 'low' then 'bg-[#7ee787]/20 text-[#7ee787]'
                when 'medium' then 'bg-[#58a6ff]/20 text-[#58a6ff]'
                when 'high' then 'bg-[#ffa657]/20 text-[#ffa657]'
                when 'critical' then 'bg-[#f85149]/20 text-[#f85149]'
              end %>">
                <%= @ticket.priority.titleize %>
              </span>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-[#8b949e] mb-1">Category</label>
              <p class="text-[#c9d1d9]"><%= @ticket.category.titleize %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-[#8b949e] mb-1">Created</label>
              <p class="text-[#c9d1d9]"><%= @ticket.created_at.strftime('%b %d, %Y at %I:%M %p') %></p>
            </div>
          </div>
        </div>
      </div>

      <%# Comments Section %>
      <div class="bg-[#161b22] border border-[#30363d] rounded-lg p-6">
        <h2 class="text-lg font-semibold text-[#c9d1d9] mb-4">Comments</h2>

        <%# Add Comment Form %>
        <%= form_with model: [@ticket, @comment], class: "mb-6" do |f| %>
          <div class="mb-3">
            <%= f.text_area :body, rows: 3, placeholder: "Add a comment...", class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
          </div>
          <%= f.submit "Add Comment", class: "px-4 py-2 bg-[#58a6ff] text-white rounded-lg hover:bg-[#58a6ff]/80 transition-colors cursor-pointer" %>
        <% end %>

        <%# Comments List %>
        <div class="space-y-4">
          <% @comments.each do |comment| %>
            <div class="border-t border-[#30363d] pt-4">
              <div class="flex items-start justify-between mb-2">
                <div>
                  <span class="text-sm font-medium text-[#c9d1d9]"><%= comment.user.name %></span>
                  <span class="text-xs text-[#8b949e] ml-2"><%= time_ago_in_words(comment.created_at) %> ago</span>
                </div>
                <% if comment.user == current_user %>
                  <%= button_to ticket_comment_path(@ticket, comment), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "text-xs text-[#f85149] hover:underline" do %>
                    Delete
                  <% end %>
                <% end %>
              </div>
              <p class="text-[#c9d1d9]"><%= comment.body %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <%# Client Info %>
      <div class="bg-[#161b22] border border-[#30363d] rounded-lg p-6">
        <h3 class="text-sm font-medium text-[#8b949e] mb-3">Client</h3>
        <%= link_to @ticket.client, class: "block" do %>
          <p class="text-lg font-semibold text-[#58a6ff] hover:underline"><%= @ticket.client.name %></p>
        <% end %>
        <p class="text-sm text-[#8b949e] mt-2"><%= @ticket.client.contact_email %></p>
      </div>

      <%# Assignment Info %>
      <div class="bg-[#161b22] border border-[#30363d] rounded-lg p-6">
        <h3 class="text-sm font-medium text-[#8b949e] mb-3">Assignment</h3>
        <div class="space-y-2">
          <div>
            <label class="block text-xs text-[#8b949e]">Created By</label>
            <p class="text-[#c9d1d9]"><%= @ticket.created_by.name %></p>
          </div>
          <div>
            <label class="block text-xs text-[#8b949e]">Assigned To</label>
            <p class="text-[#c9d1d9]"><%= @ticket.assigned_to&.name || 'Unassigned' %></p>
          </div>
        </div>
      </div>

      <%# SLA Info %>
      <% if @ticket.resolved_at %>
        <div class="bg-[#161b22] border border-[#30363d] rounded-lg p-6">
          <h3 class="text-sm font-medium text-[#8b949e] mb-3">Resolution</h3>
          <div class="space-y-2">
            <div>
              <label class="block text-xs text-[#8b949e]">Resolved At</label>
              <p class="text-[#c9d1d9]"><%= @ticket.resolved_at.strftime('%b %d, %Y at %I:%M %p') %></p>
            </div>
            <div>
              <label class="block text-xs text-[#8b949e]">Resolution Time</label>
              <p class="text-[#c9d1d9]"><%= @ticket.response_time_minutes %> minutes</p>
            </div>
            <div>
              <label class="block text-xs text-[#8b949e]">SLA Status</label>
              <p class="<%= @ticket.within_sla? ? 'text-[#7ee787]' : 'text-[#f85149]' %>">
                <%= @ticket.within_sla? ? 'Within SLA' : 'Outside SLA' %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
