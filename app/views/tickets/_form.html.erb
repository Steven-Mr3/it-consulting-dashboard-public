<%= form_with model: @ticket, class: "space-y-6" do |f| %>
  <% if @ticket.errors.any? %>
    <div class="bg-[#f85149]/10 border border-[#f85149]/30 text-[#f85149] px-4 py-3 rounded-lg">
      <h3 class="font-semibold mb-2"><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h3>
      <ul class="list-disc list-inside text-sm">
        <% @ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-[#8b949e] mb-2" %>
    <%= f.text_field :title, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-[#8b949e] mb-2" %>
    <%= f.text_area :description, rows: 6, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :client_id, "Client", class: "block text-sm font-medium text-[#8b949e] mb-2" %>
      <%= f.select :client_id, options_from_collection_for_select(@clients, :id, :name, @ticket.client_id), { prompt: "Select Client" }, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
    </div>

    <div>
      <%= f.label :assigned_to_id, "Assigned To", class: "block text-sm font-medium text-[#8b949e] mb-2" %>
      <%= f.select :assigned_to_id, options_from_collection_for_select(@consultants, :id, :name, @ticket.assigned_to_id), { prompt: "Select Consultant" }, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div>
      <%= f.label :status, class: "block text-sm font-medium text-[#8b949e] mb-2" %>
      <%= f.select :status, Ticket.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
    </div>

    <div>
      <%= f.label :priority, class: "block text-sm font-medium text-[#8b949e] mb-2" %>
      <%= f.select :priority, Ticket.priorities.keys.map { |p| [p.titleize, p] }, {}, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
    </div>

    <div>
      <%= f.label :category, class: "block text-sm font-medium text-[#8b949e] mb-2" %>
      <%= f.select :category, Ticket.categories.keys.map { |c| [c.titleize, c] }, {}, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
    </div>
  </div>

  <div class="flex items-center space-x-4">
    <%= f.submit class: "px-6 py-2 bg-[#58a6ff] text-white rounded-lg hover:bg-[#58a6ff]/80 transition-colors cursor-pointer" %>
    <%= link_to "Cancel", @ticket.persisted? ? @ticket : tickets_path, class: "px-6 py-2 bg-[#161b22] border border-[#30363d] text-[#c9d1d9] rounded-lg hover:bg-[#21262d] transition-colors" %>
  </div>
<% end %>
