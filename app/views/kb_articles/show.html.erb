<div class="p-8 max-w-5xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-[#c9d1d9]"><%= @kb_article.title %></h1>
    <div class="space-x-3">
      <%= link_to "Edit", edit_kb_article_path(@kb_article), class: "px-4 py-2 bg-[#58a6ff] text-white rounded-lg hover:bg-[#58a6ff]/80" %>
      <%= link_to "Back", kb_articles_path, class: "px-4 py-2 bg-[#161b22] border border-[#30363d] text-[#c9d1d9] rounded-lg" %>
    </div>
  </div>

  <div class="bg-[#161b22] border border-[#30363d] rounded-lg p-8 mb-6">
    <div class="flex items-center space-x-4 text-sm text-[#8b949e] mb-6">
      <span>Category: <%= @kb_article.category %></span>
      <span>•</span>
      <span><%= @kb_article.views_count %> views</span>
      <span>•</span>
      <span><%= @kb_article.helpful_count %> found helpful</span>
    </div>

    <div class="prose prose-invert max-w-none">
      <%= simple_format(@kb_article.content) %>
    </div>
  </div>

  <div class="bg-[#161b22] border border-[#30363d] rounded-lg p-6">
    <p class="text-[#8b949e] mb-4">Was this article helpful?</p>
    <div class="flex space-x-4">
      <%= button_to mark_helpful_kb_article_path(@kb_article), class: "px-4 py-2 bg-[#7ee787]/20 text-[#7ee787] rounded-lg hover:bg-[#7ee787]/30 transition-colors" do %>
        Yes, helpful
      <% end %>
      <%= button_to mark_unhelpful_kb_article_path(@kb_article), class: "px-4 py-2 bg-[#f85149]/20 text-[#f85149] rounded-lg hover:bg-[#f85149]/30 transition-colors" do %>
        No, not helpful
      <% end %>
    </div>
  </div>
</div>
