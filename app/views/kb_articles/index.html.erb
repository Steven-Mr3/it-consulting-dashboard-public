<div class="p-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-[#c9d1d9]">Knowledge Base</h1>
    <%= link_to new_kb_article_path, class: "px-4 py-2 bg-[#58a6ff] text-white rounded-lg hover:bg-[#58a6ff]/80" do %>
      + New Article
    <% end %>
  </div>

  <div class="bg-[#161b22] border border-[#30363d] rounded-lg p-6 mb-6">
    <%= form_with url: kb_articles_path, method: :get, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |f| %>
      <%= f.text_field :query, placeholder: "Search articles...", value: params[:query], class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
      <%= f.select :category, options_for_select([['All Categories', '']] + @categories.map { |c| [c, c] }, params[:category]), {}, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
      <%= f.select :sort, options_for_select([['Recent', ''], ['Most Viewed', 'views'], ['Most Helpful', 'helpful']], params[:sort]), {}, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %>
      <%= f.submit "Search", class: "px-4 py-2 bg-[#58a6ff] text-white rounded-lg hover:bg-[#58a6ff]/80 cursor-pointer" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @kb_articles.each do |article| %>
      <%= link_to article, class: "block bg-[#161b22] border border-[#30363d] rounded-lg p-6 hover:bg-[#21262d] transition-colors" do %>
        <h3 class="text-lg font-semibold text-[#c9d1d9] mb-2"><%= article.title %></h3>
        <p class="text-sm text-[#8b949e] mb-4 line-clamp-2"><%= truncate(article.content, length: 100) %></p>
        <div class="flex items-center justify-between text-xs">
          <span class="text-[#8b949e]"><%= article.category %></span>
          <span class="text-[#8b949e]"><%= article.views_count %> views</span>
        </div>
      <% end %>
    <% end %>
  </div>

  <% if @pagy.pages > 1 %>
    <div class="mt-6 flex justify-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
