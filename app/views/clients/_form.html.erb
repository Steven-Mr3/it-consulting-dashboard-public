<%= form_with model: @client, class: "space-y-6" do |f| %>
  <% if @client.errors.any? %>
    <div class="bg-[#f85149]/10 border border-[#f85149]/30 text-[#f85149] px-4 py-3 rounded-lg">
      <ul class="list-disc list-inside text-sm">
        <% @client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div><%= f.label :name, class: "block text-sm font-medium text-[#8b949e] mb-2" %><%= f.text_field :name, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %></div>
  <div><%= f.label :contact_email, class: "block text-sm font-medium text-[#8b949e] mb-2" %><%= f.email_field :contact_email, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %></div>
  <div><%= f.label :contact_phone, class: "block text-sm font-medium text-[#8b949e] mb-2" %><%= f.text_field :contact_phone, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %></div>
  <div><%= f.label :sla_response_time, "SLA Response Time (minutes)", class: "block text-sm font-medium text-[#8b949e] mb-2" %><%= f.number_field :sla_response_time, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %></div>
  <div class="grid grid-cols-2 gap-4">
    <div><%= f.label :contract_start, class: "block text-sm font-medium text-[#8b949e] mb-2" %><%= f.date_field :contract_start, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %></div>
    <div><%= f.label :contract_end, class: "block text-sm font-medium text-[#8b949e] mb-2" %><%= f.date_field :contract_end, class: "w-full px-4 py-2 bg-[#0d1117] border border-[#30363d] rounded-lg text-[#c9d1d9] focus:border-[#58a6ff] focus:outline-none" %></div>
  </div>
  <div class="flex space-x-4">
    <%= f.submit class: "px-6 py-2 bg-[#58a6ff] text-white rounded-lg hover:bg-[#58a6ff]/80 cursor-pointer" %>
    <%= link_to "Cancel", @client.persisted? ? @client : clients_path, class: "px-6 py-2 bg-[#161b22] border border-[#30363d] text-[#c9d1d9] rounded-lg hover:bg-[#21262d]" %>
  </div>
<% end %>
